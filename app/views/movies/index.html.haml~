%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => @title_header_class} <a id="title_header" href="#{movies_path(sort_param: "title")}">Movie Title</a>
      %th Rating
      %th{:class => @release_date_class} <a id="release_date_header" href="#{movies_path(sort_param: "release_date")}">Release Date</a>
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

